<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- TEXT VIEW STYLES -->
    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily" tools:ignore="NewApi">fonts/Arial Rounded MT Bold
            Regular.ttf"
        </item>
    </style>

    <style name="TextView.ForgotPassword">
        <item name="android:fontFamily" tools:ignore="NewApi">fonts/Arial Rounded MT Bold
            Regular.ttf"
        </item>
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">@color/forgot_pass</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Term">
        <item name="android:fontFamily" tools:ignore="NewApi">fonts/Arial Rounded MT Bold
            Regular.ttf"
        </item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Create">
        <item name="android:fontFamily" tools:ignore="NewApi">fonts/Arial Rounded MT Bold
            Regular.ttf"
        </item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
